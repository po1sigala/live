<section class="container">
  {{!-- We are not counting the number of times we visit this page --}}
  {{!-- But we are showing the number of times we visited the homepage --}}
  <h1>Number of times you've visited the homepage: {{countVisit}}</h1>

  <h1>{{gallery.name}}</h1>
  <h2>Opening Hour: {{format_time gallery.starting_date}}</h2>
  <h2>Closing Hour: {{format_time gallery.ending_date}}</h2>
  <section class="flex-row justify-center">
    {{#each gallery.paintings as |painting|}}
    {{> painting-details}}
    {{/each}}
  </section>
</section>