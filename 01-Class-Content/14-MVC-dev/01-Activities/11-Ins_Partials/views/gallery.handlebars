<section class="container">
  <h1>{{gallery.name}}</h1>
  <section class="flex-row justify-center">
    {{#each gallery.paintings as |painting|}}
    <section class="card">
      <a href="/painting/{{id}}">
        <header>{{title}}</header>

        <body>
          <img src="/images/{{filename}}" alt="{{description}}">
          <p>Artist: {{artist}}</p>
        </body>
      </a>
    </section>
    {{/each}}
  </section>
</section>