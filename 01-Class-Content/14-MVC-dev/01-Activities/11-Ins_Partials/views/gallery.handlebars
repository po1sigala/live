<section class="container">
  <h3>{{gallery.name}}</h3>
  <section class="flex-row justify-center">
    {{#each gallery.paintings as |painting|}}
    <section class="card">
      <a href="/painting/{{id}}">
        <header>{{title}}</header>

        <div class="card-body">
          <img src="/images/{{filename}}" alt="{{description}}">
          <p>Artist: {{artist}}</p>
        </div>
      </a>
    </section>
    {{/each}}
  </section>
</section>